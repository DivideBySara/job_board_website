<h1>Show Posting</h1>

<%= form_for @job do |f| %>
  
  	<h3><%= @job.title %></h3>
    <p><%= @job.description %></p>
    <p>Last updated: <%= @job.updated_at.getlocal.strftime("%B %d, %Y") %></p> <%# strftime takes time formats as parameters https://hackhands.com/format-datetime-ruby/ %>

  	<h5><%= link_to "Edit Posting", edit_job_path(@job)%></h5>
  	<h5><%= link_to 'Delete Posting', @job, method: :delete %></h5>
  
<% end %>